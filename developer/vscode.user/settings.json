{
    "editor.fontFamily": "'YaHei Consolas Hybrid', Consolas, 'Courier New', monospace",
    "editor.minimap.renderCharacters": false,
    "files.trimTrailingWhitespace": true,
    "editor.minimap.enabled": true,
    "workbench.sideBar.location": "left",
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?，。：；、‘’“”《》（）！？",
    "workbench.colorCustomizations": {
        "scrollbarSlider.hoverBackground": "#3f4548"
    },
    "editor.multiCursorModifier": "ctrlCmd",
    "go.formatTool": "goimports",
    "go.enableCodeLens": {
        "runtest": false
    },
    "go.toolsManagement.autoUpdate": true,
    "go.useLanguageServer": true,
    "editor.tokenColorCustomizations": {
        "keywords": "#f32c78",
        "textMateRules": [
            {
                "scope": "comment.block.documentation entity.name.type, comment.block.documentation variable, comment.block.documentation storage.type",
                "settings": {
                    "foreground": "#78848f"
                }
            }
        ]
    },
    "workbench.colorTheme": "Monokai-Hzh",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "window.menuBarVisibility": "classic",
    "editor.lineHeight": 20,
    "update.mode": "manual",
    "workbench.tree.indent": 22,
    "editor.hover.delay": 900,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "editor.fontSize": 14,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.quickSuggestionsDelay": 20,
    "explorer.confirmDragAndDrop": false,
    "explorer.confirmDelete": false,
    "editor.unicodeHighlight.ambiguousCharacters": false,
    "workbench.hover.delay": 600,
    "security.workspace.trust.untrustedFiles": "open",
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "window.zoomLevel": -0.4,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "workbench.layoutControl.enabled": false
}

